{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true
  },
  "include": ["src/"],
  "exclude": ["node_modules"],
  "lib": ["ES6", "node"],
  "rules": {
    "quotemark": [true, "single"],
    "semicolon": [true]
  }
}
